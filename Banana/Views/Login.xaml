<UserControl x:Class="Banana.Views.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Banana.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding LoginViewModel,Source={StaticResource ServiceLocator}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
            
        <Label Grid.Row="1" Grid.Column="1" HorizontalContentAlignment="Center" Margin="10">Banana</Label>
        
        <Grid Grid.Row="2" Grid.Column="1">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <Label Grid.Row="0"  Grid.Column="0" HorizontalContentAlignment="Center" Margin="10">用户名</Label> 
            <TextBox Grid.Row="0"   Grid.Column="1" HorizontalContentAlignment="Center" Margin="10" Text="{Binding Name}"></TextBox>
            
            <Label Grid.Row="1"  Grid.Column="0" HorizontalContentAlignment="Center" Margin="10">密码</Label> 
            <TextBox Grid.Row="1"   Grid.Column="1" HorizontalContentAlignment="Center" Margin="10" Text="{Binding Password}" ></TextBox>
            
        </Grid>
        
        <Button Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right" Width="50" Margin="10" Command="{Binding   LoginButtonCommand}">登录</Button>
        
    </Grid>
</UserControl>
